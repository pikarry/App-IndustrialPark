<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_radius"
    android:layout_margin="5dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvIndustrialName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khu công nghiệp Vân Trung"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="textStart"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/imgIndustrialImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/home5"/>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvLocation"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vinhx Long"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/btnSeeInfor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:ellipsize="middle"
                android:lines="1"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/blue"
                android:text="Xem thông tin"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>